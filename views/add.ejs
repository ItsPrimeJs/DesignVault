<% include ./partials/hd.ejs %>
<div class="w-full min-h-screen text-white px-5 py-4 bg-zinc-800 flex flex-col items-center">
    <h1 class="text-3xl font-semibold mb-4">Create New Post</h1>
    <hr class="opacity-10 mb-4 w-full max-w-2xl">
    <form action="/createpost" enctype="multipart/form-data" method="post" class="w-full max-w-2xl bg-zinc-700 p-6 rounded-lg shadow-lg">
        <div class="mb-4">
            <label for="postimage" class="block text-sm font-medium mb-1">Upload Image</label>
            
            <input class="block w-full px-3 py-2 border-2 border-zinc-600 rounded-md bg-zinc-800 text-white focus:outline-none focus:ring-2 focus:ring-blue-500" type="file" name="postimage" id="postimage">
        </div>
        <div class="mb-4">
            <label for="title" class="block text-sm font-medium mb-1">Title</label>
            <input class="block w-full px-3 py-2 border-2 border-zinc-600 rounded-md bg-zinc-800 text-white focus:outline-none focus:ring-2 focus:ring-blue-500" type="text" name="title" placeholder="Title" id="title">
        </div>
        <div class="mb-4">
            <label for="description" class="block text-sm font-medium mb-1">Description</label>
            <textarea class="block w-full px-3 py-2 border-2 border-zinc-600 rounded-md bg-zinc-800 text-white focus:outline-none focus:ring-2 focus:ring-blue-500" name="description" placeholder="Description" id="description" rows="4"></textarea>
        </div>
        <button class="w-full px-4 py-2 bg-red-600 rounded-md text-white font-semibold hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500" type="submit">Create Post</button>
    </form>
</div>
